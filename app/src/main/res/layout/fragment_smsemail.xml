<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".smsemail">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/availablebooksmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/backbutton"
            app:tint="?attr/background_color"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Send SMS &amp; Email"
            android:textColor="?attr/background_color"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color">
        <EditText
            android:id="@+id/etTo"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColor="#2C2C2C"
            android:textColorHint="#2C2C2C"
            android:background="@drawable/searchavailablebooksbackground"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/etSubject"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine"
            android:hint="Subject"
            android:textColor="#2C2C2C"
            android:textColorHint="#2C2C2C"
            android:background="@drawable/searchavailablebooksbackground"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/etBody"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine"
            android:hint="Message"
            android:textColor="#2C2C2C"
            android:textColorHint="#2C2C2C"
            android:background="@drawable/searchavailablebooksbackground"
            android:padding="10dp"/>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/buttonsend"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
           android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="Send Email" />

        <EditText
            android:id="@+id/to"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone Number"
            android:textColor="#2C2C2C"
            android:textColorHint="#2C2C2C"
            android:background="@drawable/searchavailablebooksbackground"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/msg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine"
            android:hint="Type Message"
            android:textColor="#2C2C2C"
            android:textColorHint="#2C2C2C"
            android:background="@drawable/searchavailablebooksbackground"
            android:padding="10dp"/>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/send"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="Send SMS" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>

</FrameLayout>